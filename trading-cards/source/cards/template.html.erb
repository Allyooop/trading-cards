<header class="<%= page_classes %>">
  <div class="container">
    <div class="row">
      <h1 class="persona-heading" id="top"><%= persona['title'] %></h1>
    </div>
  </div>
</header>

<div class="container">
  <ol class="breadcrumb">
    <li><a href="/">Index</a></li>
    <li class="active"><%= persona['title'] %></li>
  </ol>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-xs-6">
      <div class="well">
        <img src="<%= persona['img'] %>" class="img-responsive">
      </div>
    </div>
    
    <div class="col-sm-4 col-xs-6">
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Name:</strong> <%= persona['name'] %></li>
          <li><strong>Age:</strong> <%= persona['age'] %></li>
          <li><strong>Sex:</strong> <%= persona['sex'] %></li>
          <li><strong>Job title:</strong> <%= persona['job-title'] %></li>
        </ul>
      </div>
    </div>
    
    <div class="col-sm-4 col-xs-12">
      <div class="well well-primary">
        <p class="lead">"<%= persona['quote'] %>"</p>
      </div>
    </div>
    
  </div>
  
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <div class="well">
        <h3>Job Description</h3>
        <p><%= persona['job-desc'] %></p>
      </div>
    </div>
    
    
    <div class="col-sm-6 col-xs-12">
      <div class="well">
        <h3>Personality</h3>
        <p><%= persona['personality'] %></p>
      </div>
    </div>
  </div>
    
   <div class="row">
    <div class="col-sm-6 col-xs-12">
      <div class="well">
        <h3>Goals &amp; Targets</h3>
        <p><%= persona['goals'] %></p>
      </div>
    </div>
    
    <div class="col-sm-6 col-xs-12">
      <div class="well">
        <h3>Skills &amp; Competencies</h3>
        <p><%= persona['skills'] %></p>
      </div>
    </div>
    
  </div>
  
  <hr>
  
  <div class="row">
      <div class="well">
        <h3>Notes</h3>
        <p><%= persona['notes'] %></p>
      </div>
  </div>
  
</div>